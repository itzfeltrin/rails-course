<h1 class="text-center mt-4">Log In</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with scope: :session, url: login_path, class: "shadow p-4 my-4 bg-info rounded", data: { turbo: false }, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, placeholder: "Enter your password", class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Log In", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= link_to '[ Cancel and return to users listing ]', users_path, class: "text-info font-weight-bold" %>
    </div>
  </div>
</div>
